<h1><%= @recipe.title %></h1>

<h3>Description: <%= @recipe.description %></h3>

<p>Ingredients:</p>
<ul>
<% @recipe.ingredients.each do |ingredient| %>
    <li><%= link_to ingredient.name, ingredient_path(ingredient) %></li>
<% end %>
</ul>

<h4>To edit <%= link_to 'click here', edit_recipe_path(@recipe) %></h4>

<%= button_to 'Delete Recipe', recipe_path(@recipe), method: :delete %>

<h4>Created by: <%= link_to @recipe.user.name, user_path(@recipe.user) %></h4>

